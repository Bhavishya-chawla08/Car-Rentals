<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Login - RentDrive</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="container">
    <section class="card grid">
      <div>
        <h2>Login</h2>
        <p>Enter your email and password to access your dashboard.</p>
        <div style="margin-top:12px" class="card">
          <strong>Note</strong>
          <p style="color:var(--muted)">If you are an organization admin, log in with the organization email.</p>
        </div>
      </div>

      <form id="loginForm" class="form-box" method="POST" action="/login">
        <label for="email">Email Address</label>
        <input id="email" name="email" type="email" required />

        <label for="password" class="mt-20">Password</label>
        <input id="password" name="password" type="password" required />

        <div class="mt-20 text-center">
          <button class="btn-primary" type="submit">Login</button>
        </div>
      </form>
    </section>
  </main>

  <%- include('partials/footer') %>

  <script>
    function isValidEmail(email){ return "/^[^\s@]+@[^\s@]+\.[^\s@]+$/".test(email) }
    document.getElementById('loginForm').addEventListener('submit', function(e){
      if (!isValidEmail(document.getElementById('email').value.trim())) { e.preventDefault(); alert('Enter a valid email'); }
    });
  </script>
</body>
</html>
