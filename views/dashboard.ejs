<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Dashboard - RentDrive</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="container">
    <section class="dashboard-welcome card">
      <h1>Welcome, <%= user.name %> ðŸ‘‹</h1>
      <p style="color:var(--muted)">Manage your rides, bookings, and profile below.</p>
    </section>

    <section class="mt-20">
      <div class="dashboard-grid">

        <!-- ==== BOOK NEW RIDE ==== -->
        <div class="dashboard-card">
          <h3>ðŸš— Book a New Ride</h3>
          <form action="/book" method="POST" class="form-box">
            <label for="pickup_address">Pickup Address</label>
            <input type="text" id="pickup_address" name="pickup_address" required placeholder="Enter pickup address" />

            <label for="drop_address" class="mt-20">Drop Address</label>
            <input type="text" id="drop_address" name="drop_address" required placeholder="Enter drop address" />

            <label for="pickup_time" class="mt-20">Pickup Time</label>
            <input type="time" id="pickup_time" name="pickup_time" required />

            <label for="start_date" class="mt-20">Start Date</label>
            <input type="date" id="start_date" name="start_date" required />

            <label for="end_date" class="mt-20">End Date</label>
            <input type="date" id="end_date" name="end_date" required />

            <button type="submit" class="btn-primary mt-20">Book Ride</button>
          </form>
        </div>

        <!-- ==== USER BOOKINGS ==== -->
        <div class="dashboard-card">
          <h3>Your Bookings</h3>
          <% if (bookings.length === 0) { %>
            <p>No bookings yet.</p>
          <% } else { %>
            <ul>
              <% bookings.forEach(b => { %>
                <li class="booking-item <%= b.status === 'Cancelled' ? 'booking-cancelled' : (b.confirmed ? 'booking-confirmed' : 'booking-pending') %>">
                  <strong>Ride ID #<%= b.id %></strong> â€” 
                  <span class="status <%= b.status.toLowerCase() %>"><%= b.status %></span><br>
                  <small><%= b.start_date.toISOString().split('T')[0] %> â†’ <%= b.end_date.toISOString().split('T')[0] %></small><br>
                  <strong>Pickup:</strong> <%= b.pickup_address %><br>
                  <strong>Drop:</strong> <%= b.drop_address %><br>
                  <strong>Pickup Time:</strong> <%= b.pickup_time %><br>
                  <strong>Driver:</strong> <%= b.driver_name || 'Pending Assignment' %>

                  <% if (b.status !== 'Cancelled' && b.status !== 'Completed') { %>
                    <form method="POST" action="/cancel-ride" style="margin-top:10px;">
                      <input type="hidden" name="booking_id" value="<%= b.id %>">
                      <button class="btn-warning">Cancel Ride</button>
                    </form>
                  <% } %>
                </li>
              <% }) %>
            </ul>
          <% } %>
        </div>
      </div>
    </section>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
