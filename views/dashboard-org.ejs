<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Organization Dashboard - RentDrive</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      border: 1px solid #e2e8f0;
      padding: 8px;
      text-align: left;
    }
    th {
      background: #f8fafc;
    }
    tr:nth-child(even) {
      background-color: #f9fafb;
    }
    .btn {
      padding: 6px 12px;
      border-radius: 6px;
      border: none;
      cursor: pointer;
    }
    .btn-edit {
      background-color: #0d6efd;
      color: white;
    }
    .btn-delete {
      background-color: #dc2626;
      color: white;
    }
    .btn-add {
      background-color: #059669;
      color: white;
      margin-top: 10px;
    }
    .modal {
      display: none;
      position: fixed;
      top: 0; left: 0; right: 0; bottom: 0;
      background: rgba(0,0,0,0.5);
      justify-content: center;
      align-items: center;
    }
    .modal-content {
      background: white;
      padding: 20px;
      border-radius: 10px;
      width: 400px;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>
  <main class="container">
    <div class="card">
      <h1>Welcome, <%= user.name %> (Organization)</h1>
      <p>Manage your registered drivers below:</p>

      <form action="/org/add-driver" method="POST" class="form-box" style="margin-bottom:20px;">
        <h3>Add New Driver</h3>
        <label>Name</label>
        <input type="text" name="fullname" required placeholder="Driver Name">

        <label>Email</label>
        <input type="email" name="email" required placeholder="driver@example.com">

        <label>Phone</label>
        <input type="text" name="phone" required placeholder="+91 98765 43210">

        <label>City</label>
        <input type="text" name="city" required placeholder="City">

        <label>Password</label>
        <input type="password" name="password" required placeholder="Driver Password">

        <button class="btn btn-add" type="submit">Add Driver</button>
      </form>

      <% if (drivers.length === 0) { %>
        <p>No drivers registered yet.</p>
      <% } else { %>
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>City</th>
              <th>Registered</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% drivers.forEach(d => { %>
              <tr>
                <td><%= d.fullname %></td>
                <td><%= d.email %></td>
                <td><%= d.phone %></td>
                <td><%= d.city %></td>
                <td><%= d.created_at.toISOString().split('T')[0] %></td>
                <td>
                  <button 
                    class="btn btn-edit"
                    data-id="<%= d.id %>"
                    data-fullname="<%= d.fullname %>"
                    data-email="<%= d.email %>"
                    data-phone="<%= d.phone %>"
                    data-city="<%= d.city %>"
                    onclick="openEditModal(this)">
                    Edit
                  </button>

                  <form action="/org/delete-driver" method="POST" style="display:inline;">
                    <input type="hidden" name="id" value="<%= d.id %>">
                    <button class="btn btn-delete" type="submit" onclick="return confirm('Are you sure you want to delete this driver?')">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
  </main>
  
  <div class="modal" id="editModal">
    <div class="modal-content">
      <h3>Edit Driver</h3>
      <form action="/org/update-driver" method="POST">
        <input type="hidden" id="edit_id" name="id">
        <label>Name</label>
        <input type="text" id="edit_fullname" name="fullname" required>
        <label>Email</label>
        <input type="email" id="edit_email" name="email" required>
        <label>Phone</label>
        <input type="text" id="edit_phone" name="phone" required>
        <label>City</label>
        <input type="text" id="edit_city" name="city" required>
        <div style="margin-top:10px;">
          <button class="btn btn-edit" type="submit">Update</button>
          <button type="button" class="btn btn-delete" onclick="closeModal()">Cancel</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    const modal = document.getElementById('editModal');

    function openEditModal(button) {
      modal.style.display = 'flex';
      document.getElementById('edit_id').value = button.dataset.id;
      document.getElementById('edit_fullname').value = button.dataset.fullname;
      document.getElementById('edit_email').value = button.dataset.email;
      document.getElementById('edit_phone').value = button.dataset.phone;
      document.getElementById('edit_city').value = button.dataset.city;
    }

    function closeModal() {
      modal.style.display = 'none';
    }

    window.onclick = function(e) {
      if (e.target === modal) closeModal();
    };
  </script>

  <%- include('partials/footer') %>
</body>
</html>
